# Server
HOST=0.0.0.0
PORT=8099

# Redis
REDIS_URL=redis://bmkg-api-redis:6379

# Rate Limiting
RATE_LIMIT_ANONYMOUS=30/minute
RATE_LIMIT_AUTHENTICATED=120/minute

# Cache TTL (seconds)
CACHE_TTL_NOWCAST=120
CACHE_TTL_WEATHER=900
CACHE_TTL_EARTHQUAKE_LATEST=60
CACHE_TTL_EARTHQUAKE_LIST=300

# API Keys (comma-separated, optional)
API_KEYS=

# BMKG Base URLs (override if needed)
BMKG_NOWCAST_BASE_URL=https://www.bmkg.go.id/alerts/nowcast
BMKG_WEATHER_BASE_URL=https://api.bmkg.go.id/publik
BMKG_EARTHQUAKE_BASE_URL=https://data.bmkg.go.id/DataMKG/TEWS

# Logging
LOG_LEVEL=INFO
